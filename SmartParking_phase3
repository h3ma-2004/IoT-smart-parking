    import RPi.GPIO as GPIO
import time

# Define GPIO pins for Trig and Echo
TRIG_PIN = 17
ECHO_PIN = 18

# Set GPIO mode to BCM
GPIO.setmode(GPIO.BCM)

# Set up GPIO pins
GPIO.setup(TRIG_PIN, GPIO.OUT)
GPIO.setup(ECHO_PIN, GPIO.IN)

try:
    while True:
        # Trigger the ultrasonic sensor
        GPIO.output(TRIG_PIN, True)
        time.sleep(0.00001)
        GPIO.output(TRIG_PIN, False)

        start_time = time.time()
        stop_time = time.time()

        # Wait for the echo response
        while GPIO.input(ECHO_PIN) == 0:
            start_time = time.time()

        while GPIO.input(ECHO_PIN) == 1:
            stop_time = time.time()

        # Calculate distance in centimeters
        elapsed_time = stop_time - start_time
        distance = (elapsed_time * 34300) / 2  # Speed of sound is 343 m/s

        print("Distance: {distance:.2f} cm")

        time.sleep(1)  # You can adjust the sampling rate as needed

except KeyboardInterrupt:
    pass  # Gracefully exit the loop without raising an error

finally:
    GPIO.cleanup()

    
